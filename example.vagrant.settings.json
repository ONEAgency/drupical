{
  "config": {

    "box_name": "PROJECT_NAME",
    "box_hostname": "SITE_HOST",

    "vagrant_synced_folders" : {
      "build" : {
        "source" : "..",
        "target" : "/vagrant",
        "type" : "nfs",
        "mount_options" : ["rw", "vers=3", "udp", "fsc", "actimeo=1"]
      },
      "docroot" : {
        "source" : "../docroot",
        "target" : "/var/www/site/docroot",
        "type"   : "nfs",
        "mount_options" : ["rw", "vers=3", "udp", "fsc", "actimeo=1"]
      }
    },

    "web_tools": {
      "web_tools_install": true,
      "url_base": "tools.drupical.local"
    },

    "php": {
      "php_version": "5.5",
      "enable_php_phing": false,
      "enable_php_composer": false,
      "enable_php_drush": true
    },

    "vhosts" : {
      "SITE_NAME" : {
        "server_name" : "SITE_HOST",
        "database_name" : "PROJECT_NAME",
        "docroot" : "/vagrant/docroot/",
        "aliases" : [ "www.SITE_HOST" ],
        "enable_ssl" : "true",
        "php_settings": {
          "log_errors": "on",
          "memory_limit": "512M",
          "error_reporting": "E_ALL & ~E_DEPRECATED",
          "display_errors": "On",
          "post_max_size": "64M",
          "upload_max_filesize": "64M"
        }
      }
    },

    "php_packages": {
      "php5-curl": true,
      "php5-gd": true,
      "php5-intl": true,
      "php5-json": true,
      "php5-mcrypt": true,
      "php5-memcached": true,
      "php5-mysqlnd": true,
      "php5-xdebug": true
    }

  }
}
