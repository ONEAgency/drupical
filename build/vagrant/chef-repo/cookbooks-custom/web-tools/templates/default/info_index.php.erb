<?php

// MySQL
$mysqli = @new mysqli('localhost', 'root', '<%= node[:mysql][:server_root_password] %>');
$mysql_running = TRUE;
if (mysqli_connect_errno()) {
  $mysql_running = FALSE;
}
else {
  $mysql_version = $mysqli->server_info;
}
$mysqli->close();

// Memcached
$m = @new Memcached();
$memcached_running = FALSE;
if ($m->addServer('localhost', 11211)) {
$memcached_running = TRUE;
$memcached_version = $m->getVersion();
$memcached_version = current($memcached_version);
}
