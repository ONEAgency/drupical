{
  "name": "web",
  "description": "Web role",
  "json_class": "Chef::Role",
  "default_attributes": {
    "memcached": {
      "memory": "128"
    },
    "apache": {
      "default_modules": [
        "alias",
        "cgi",
        "deflate",
        "dir",
        "log_config",
        "mime",
        "rewrite",
        "setenvif"
      ],
      "log_dir" : "/home/vagrant/drupical/logs/apache2"
    },
    "php" : {
      "install_method" : "package",
      "directives" : {
        "memory_limit" : "512M",
        "error_reporting" : "E_ALL & ~E_DEPRECATED",
        "display_errors" : "On",
        "post_max_size" : "64M",
        "upload_max_filesize" : "64M"
      }
    }
  },
  "chef_type": "role",
  "run_list": [
    "recipe[apache2]",
    "recipe[drupical::apache]",
    "recipe[php5::default]",
    "recipe[drupical::php]",
    "recipe[memcached]",
    "recipe[drush]",
    "recipe[composer]",
    "recipe[phing]"
  ],
  "env_run_lists": {
  }
}
